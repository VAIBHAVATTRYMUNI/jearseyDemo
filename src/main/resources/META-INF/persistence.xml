<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="vaibhav" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.jersey.Jerseydemo.entity.Zoo</class>
        <!-- Add more entity classes here if needed -->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/animal_zoo"/>
            <property name="javax.persistence.jdbc.user" value="vaibhav"/>
            <property name="javax.persistence.jdbc.password" value="welcome"/>
        </properties>
    </persistence-unit>

</persistence>
